<% @title = "検索内容" %>
<h1><%= @title %></h1>

<div class="table-wrapper">
    <table class = "listing">
        <tr>
            <th></th>
            <th>ID</th>
            <th>氏名</th>
            <th>フリガナ</th>
            <th>生年月日</th>
            <th>入社日</th>
            <th>退職日</th>
        </tr>
        <% @searches.each do |x| %>
            <tr class="none">
                <td class="actions">
                    <%= link_to "更新" , x.id.to_s+"/edit"%>
                </td>
                <td><%= x.id %></td>
                <td><%= x.last_name %> <%= x.first_name %></td>
                <td><%= x.last_name_phonetic %> <%= x.first_name_phonetic %></td>
                <td ><%= x.birth_year_month%></td>
                <td><%= x.joining_year %></td>
                <td><%= x.deleted_at.try(:strftime, "%Y/%m/%d") %></td>
            </tr>
        <% end %>
    </table>
    <%= link_to "back", "/account/admin/show" %>
</div>
